<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="center" gridLinesVisible="false" xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="view.RootController">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="167.0" minHeight="167.0" prefHeight="167.0"/>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <BorderPane prefHeight="167.0" prefWidth="321.0">
            <center>
                <AnchorPane prefHeight="142.0" prefWidth="304.0" BorderPane.alignment="CENTER">
                    <children>
                        <TextField fx:id="minField" layoutX="87.0" layoutY="45.0" prefHeight="42.0" prefWidth="68.0"
                                   promptText="min"/>
                        <TextField fx:id="secField" layoutX="168.0" layoutY="45.0" prefHeight="41.0" prefWidth="67.0"
                                   promptText="sec"/>
                        <Button fx:id="startButton" layoutX="115.0" layoutY="103.0"
                                mnemonicParsing="false"
                                prefHeight="25.0" prefWidth="93.0"
                                text="Start"
                                onAction="#startTimerEventHandler"/>

                        <Label layoutX="104.0" layoutY="14.0" text="Set your Tomato time"/>
                    </children>
                </AnchorPane>
            </center>
            <top>
                <MenuBar prefHeight="25.0" prefWidth="298.0" BorderPane.alignment="CENTER">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Close" onAction="#closeAction"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Settings">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Settings"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" onAction="#aboutWindowAction"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </top>
        </BorderPane>
    </children>
</GridPane>
